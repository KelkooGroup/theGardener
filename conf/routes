# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                     controllers.Application.index()

GET        /feature/:project/:feature            controllers.Application.feature(project: String, feature: String)

GET        /api/feature/:project/:feature        controllers.Api.feature(project: String, feature: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                         controllers.Assets.at(path="/public", file)

#IsAlive
GET     /HealthCheck/isAlive        com.kelkoo.play.controllers.IsAlive.isAlive(status: Option[String])

