<% require 'kelkoo/erb_utils' %># This is the main configuration file for the application.
# ~~~~~

application.windowTitle = <%= value("the_gardener_application_window_title") %>
application.title = <%= value("the_gardener_application_title") %>
application.logoSrc = <%= value("the_gardener_application_logo_src") %>
application.faviconSrc = <%= value("the_gardener_application_favicon_src") %>


play.http.filters=filters.Filters

# disable cache on application index
play.assets.cache."/public/dist/index.html"="no-cache"

isAlive.initialStatus=<%= value("the_gardener_isalive_initial_status") %>
isAlive.strOK=<%= value("the_gardener_isalive_is_alive_keyword") %>
isAlive.strDead=<%= value("the_gardener_isalive_is_dead_keyword") %>
isAlive.checkApp="<%= value("the_gardener_isalive_check_app") %>"
isAlive.appUrlToCheck="<%= value("the_gardener_isalive_app_url_to_check") %>"
isAlive.strexpectedHttpCode="<%= value("the_gardener_isalive_expected_http_code") %>"
isAlive.expectedHttpResponse="<%= value("the_gardener_isalive_expected_http_response") %>"


# Secret key
# ~~~~~
# The secret key is used to secure cryptographics functions.
# If you deploy your application to several instances be sure to use the same key!
play.http.secret.key="<Mf_T2OmqeZD1d6AtDjYtdeN33hJjo]OtgJVZRwZGckD28wn3r3UtKP6ZQMKXPw`"

# The application languages
# ~~~~~
play.i18n.langs=["en"]

# Disable filters for Swagger
play.filters.disabled += "play.filters.headers.SecurityHeadersFilter"
play.filters.disabled += "play.filters.csrf.CSRFFilter"
play.filters.disabled += play.filters.hosts.AllowedHostsFilter
# Swagger
play.modules.enabled += "play.modules.swagger.SwaggerModule"

api.version = "1.0"

# Database configuration
# ~~~~~ 
# You can declare as many datasources as you want.
# By convention, the default datasource is named `default`
#
db.default.driver=com.mysql.jdbc.Driver
db.default.url="<%= value("the_gardener_db_url") %>"
db.default.username=<%= value("the_gardener_db_user") %>
db.default.password=<%= value("the_gardener_db_password") %>
play.evolutions.autoApply = true

# You can expose this datasource via JNDI if needed (Useful for JPA)
# db.default.jndiName=DefaultDS

projects.root.directory = <%= value("the_gardener_projects_root_directory") %>
projects.synchronize.interval = <%= value("the_gardener_projects_synchronize_interval") %>
projects.synchronize.initial.delay = <%= value("the_gardener_projects_synchronize_initial_delay") %>

projects.synchronize.from.remote.enabled = <%= value("the_gardener_projects_synchronize_from_remote_enabled") %>

documentation.meta.file = <%= value("the_gardener_documentation_meta_file") %>

play.server.http.idleTimeout = 60s
play.server.akka.requestTimeout = 40s

<% if has_variable?("the_gardener_replica_url") %>
replica.url= "<%= value("the_gardener_replica_url") %>"
<% end %>