isAlive.strDead=<%= value("the_gardener_isalive_is_dead_keyword") %>
isAlive.checkApp="<%= value("the_gardener_isalive_check_app") %>"
isAlive.appUrlToCheck="<%= value("the_gardener_isalive_app_url_to_check") %>"
isAlive.strexpectedHttpCode="<%= value("the_gardener_isalive_expected_http_code") %>"
isAlive.expectedHttpResponse="<%= value("the_gardener_isalive_expected_http_response") %>"


