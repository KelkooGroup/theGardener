# By convention, the default datasource is named `default`
#
db.default.driver=com.mysql.jdbc.Driver
db.default.url="<%= value("the_gardener_db_url") %>"
db.default.username=<%= value("the_gardener_db_user") %>
db.default.password=<%= value("the_gardener_db_password") %>
play.evolutions.autoApply = true

play.modules.enabled += "utils.CacheModule"

